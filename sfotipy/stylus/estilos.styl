@import "normalize.styl"
@import "fonts.styl"
gris_oscuro = #333333
gris_claro = #818181
a
	text-decoration none
body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
//buttons 
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.actions
	position absolute
	bottom 0
	left 0
	right 0
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.padding
	padding 1em	
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.header
	height 3.5em
	// a
	// 	display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em