@import "normalize.styl"
@import "fonts.styl"
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
a
	text-decoration none
body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
img
	vertical-align top
//buttons 
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	font-size 1.2em
	margin-right 1em
	&:last.child
		margin-right 0
	&.gray
		color gris_claro
.actions
	background rgba(black,0.3)
	bottom 0
	left 0
	position absolute
	right 0
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.padding
	padding 1em	
.padding-tb
	padding 1em 0
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.progress
	margin 1em 0
	position relative
	.min
	.max
		position absolute
		font-size .8em
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%;
	.state
		border-radius 5px
		height 5px
		background rojo
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		position absolute
		right 0
		height 10px
		width 10px
		top -2px
.right-text
	text-align right
.relative
	position relative
.header
	height 3.5em
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em